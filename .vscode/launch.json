    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/time-sheet/bin/Debug/netcoreapp2.2/time-sheet.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "DATABASE_CONNECTION_STR": "Server=localhost;Port=5432;User Id=time_sheet;Password=time_sheet;Database=time_sheet;"
            },
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}